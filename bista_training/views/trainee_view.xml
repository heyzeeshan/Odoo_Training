<odoo>
  <data>
      <!--Bista trainee list/tree view-->
     <record model="ir.ui.view" id="bista_training.trainee_list">
      <field name="name">bista_trainee list</field>
      <field name="model">bista.trainee</field>
      <field name="arch" type="xml">
        <tree>
            <field name="trainee_id"/>
          <field name="emp_code"/>
          <field name="name" required="1" placeholder="Name"/>
            <field name="doj"/>
          <field name="email" required="1" placeholder="Email"/>
<!--          <field name="trainee_batch" required="1" placeholder="Pick your Batch"/>-->
        </tree>
      </field>
    </record>

      <!-- Bista Trainee Form View    -->
    <record model="ir.ui.view" id="bista_training.trainee_form">
      <field name="name">bista_trainee form</field>
      <field name="model">bista.trainee</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_employment" string="Proceed" type="object"/>
                <field name="status" widget="statusbar" options = "{'clickable':'1', 'fold_field': 'fold'}" statusbar_visible="new,training,employed"/>
            </header>
          <sheet>
              <field name="profile"  widget='image' class="oe_avatar"/>
              <div class="oe_title">
                  <h1>
                      <field name="name" readonly="True"/>
                  </h1>
              </div>

            <group>
              <group>
                  <field name="trainee_id" readonly="1"/>
                  <field name="first_name" placeholder="First Name" required="1" />
                  <field name="last_name" placeholder="Last Name"/>
                  <field name="gender" required="1">
                  <select class="form-control" name="gender">
                         <option t-attf-value="'male'">Male</option>
                         <option t-attf-value="'female'">Female</option>
                         <option t-attf-value="'other'">Other</option>
                   </select></field>
                  <field name="dob"/>
                  <field name="email" required="1" placeholder="Email"/>
                  <field name="location" />
                  <field name="designation"/>
              </group>
              <group>
                  <field name="emp_code" placeholder="Employee Code"/>

                  <field name="doj" />
                  <field name="trainee_batch" required="1" placeholder="Pick a Batch"/>
                  <field name="employee_id" readonly="1" />
                  <field name="performance" widget="priority" />

              </group>
            </group>
          </sheet>
            <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
            </div>
        </form>
      </field>
    </record>

            <!-- Bista Trainee Kanban View    -->
      <record  model="ir.ui.view" id="bista_training.trainee_kanban">
            <field name="name">bista_trainee kanban</field>
            <field name="model">bista.trainee</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="emp_code"/>
                    <field name="trainee_id"/>
                    <field name="name"/>
	                <field name="email"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="doj" />
                    <field name="location" />
                    <field name="profile" widget="image"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
<!--                                Profile Image block-->
                                <t t-if="record.profile.raw_value">
                                <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('bista.trainee', 'profile',record.id.raw_value)"/>
                                </div>
                                </t>
                                <t t-else="">
                                    <img class="o_kanban_image" alt="Avatar" src="base/static/img/avatar_grey.png" />
                                </t>
<!--                                <t t-if="record.profile.raw_value">-->
<!--&lt;!&ndash;                                    <field name="profile" nolabel="1" widget="image" class="oe_right oe_avatar d-none d-md-block"/>&ndash;&gt;-->
<!--                                    <div class="o_kanban_image_fill_left d-none d-md-block"-->
<!--                                    t-attf-style="background-image:url('kanban_image('bista.trainee', 'profile', record.emp_code.raw_value)')"/>-->
<!--                                </t>-->
<!--                                <t t-else="">-->
<!--                                    <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"' />-->
<!--                                </t>-->
<!--                                profile image block end-->

                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>Trainee ID: <field name="trainee_id"/></li>
                                        <li>Email: <field name="email"/> </li>
                                        <li>Gender: <field name="gender"/></li>
                                        <li>DOB: <field name="dob"/></li>
                                        <li>Joining: <field name="doj"/></li>
                                        <li>Location: <field name="location"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

<!-- Bista Trainee Search View -->
		<record  model="ir.ui.view" id="bista_training.trainee_search">
			<field name="name">bista_trainee search</field>
			<field name="model">bista.trainee</field>
			<field name="arch" type="xml">
				<search string="Trainee Information">
					<field name="name"/>
                    <field name="trainee_id"/>
					<field name="emp_code"/>
					<field name="email"/>
					<field name="location"/>
					<field name="designation"/>
					<group expand="0" string="Group By">
						<filter name="groupby_location" string="Location" context="{'group_by':'location'}"
							help="Group by location"/>
						<filter name="groupby_course" context="{'group_by': 'designation'}" string="Designation"
							help="Group by designation" />
					</group>
<!--					<filter name="fil_by_disability" string="Physically Disabled" domain="[('is_physically_disabled','=','True')]"-->
<!--						help="Show all Physically Disabled Students" />-->
<!--					<filter string="Registered Current Year" name="fil_by_current_year" domain="[('registration_date','&lt;=',-->
<!--						time.strftime('%%Y-12-31')),('registration_date','&gt;=',time.strftime('%%Y-01-01'))]"-->
<!--						help="Filter Students Registered in Current Year"/>-->
				</search>
			</field>
		</record>
          <!-- actions opening views on models -->

      <!-- action for trainee master-->
    <record model="ir.actions.act_window" id="bista_training.action_trainee_master">
      <field name="name">Bista Trainee</field>
      <field name="res_model">bista.trainee</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

       </data>
</odoo>