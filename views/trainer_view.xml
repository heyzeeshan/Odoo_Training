<odoo>
  <data>
      <!--Bista trainer list/tree view-->
     <record model="ir.ui.view" id="bista_training.trainer_list">
      <field name="name">bista_trainer list</field>
      <field name="model">bista.trainer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" readonly="1" placeholder="Name"/>
            <field name="first_name" required="1" placeholder="First Name"/>
            <field name="last_name"  placeholder="Last Name"/>

        </tree>
      </field>
    </record>

         <!-- Bista Trainer Form View    -->
    <record model="ir.ui.view" id="bista_training.trainer_form">
      <field name="name">bista_trainer form</field>
      <field name="model">bista.trainer</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <field name="profile"  widget='image' class="oe_avatar"/>
              <div class="oe_title">
                  <h1>
                      <field name="name" readonly="True"/>
                  </h1>
              </div>
            <group>
                <group>
                    <field name="first_name" placeholder="First Name" required="1" />
                    <field name="last_name" placeholder="Last Name"/>



                </group>

                <group>

                </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>

<!-- Bista Trainer Kanban View    -->
      <record  model="ir.ui.view" id="bista_training.trainer_kanban">
            <field name="name">bista_trainer kanban</field>
            <field name="model">bista.trainer</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="profile"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
<!--                                Profile Image block-->

                                <t t-if="record.profile.raw_value">
                                    <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('bista.trainer', 'profile',record.id.raw_value)"/>
                                </div>
                                </t>
                                <t t-else="">
                                    <div  class="o_kanban_image" >
                                    <img alt="Avatar" src="base/static/img/avatar_grey.png" />
                                </div>
                                </t>

<!--                                <t t-if="record.profile.raw_value">-->
<!--                                    <field name="profile" nolabel="1" widget="image" class="oe_right oe_avatar d-none d-md-block"/>-->
<!--                                    <div class="o_kanban_image_fill_left d-none d-md-block"-->
<!--                                    t-attf-style="background-image:url('kanban_image('bista.trainer', 'profile', record.emp_code.raw_value)')"/>-->
<!--                                </t>-->
<!--                                <t t-else="">-->
<!--                                    <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"' />-->
<!--                                </t>-->
<!--                                profile image block end-->

                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
          <!-- actions opening views on models -->


<!-- action for trainer master-->
    <record model="ir.actions.act_window" id="bista_training.action_trainer_master">
      <field name="name">Bista Trainer</field>
      <field name="res_model">bista.trainer</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

       </data>
</odoo>