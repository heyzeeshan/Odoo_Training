<odoo>
  <data>
            <!--Bista Location list/tree view-->
     <record model="ir.ui.view" id="bista_training.subjects_list">
      <field name="name">bista_subjects list</field>
      <field name="model">bista.subjects</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="topics"/>
            <field name="trainers"/>
        </tree>
      </field>
    </record>

            <!-- Bista Location Form View    -->
      <record model="ir.ui.view" id="bista_training.subjects_form">
      <field name="name">bista_subjects form</field>
      <field name="model">bista.subjects</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                    <field name="name" required="1"/>
                    <field name="topics"/>
                    <field name="trainers"/>
              </group>
              <group>

              </group>
                <field name="description"/>

            </group>
          </sheet>
        </form>
      </field>
    </record>

         <!-- actions opening views on models -->

      <!-- action for Location master-->
    <record model="ir.actions.act_window" id="bista_training.action_subjects_master">
      <field name="name">Training Subjects</field>
      <field name="res_model">bista.subjects</field>
      <field name="view_mode">tree,form</field>
    </record>
       </data>
</odoo>