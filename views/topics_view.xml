<odoo>
  <data>
            <!--Bista Location list/tree view-->
     <record model="ir.ui.view" id="bista_training.topics_list">
      <field name="name">bista_topics list</field>
      <field name="model">bista.topics</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="subject"/>
        </tree>
      </field>
    </record>

            <!-- Bista Location Form View    -->
      <record model="ir.ui.view" id="bista_training.topics_form">
      <field name="name">bista_topics form</field>
      <field name="model">bista.topics</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                    <field name="name" required="1"/>
                    <field name="subject" readonly="1"/>
              </group>
              <group>

              </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>

         <!-- actions opening views on models -->

      <!-- action for Location master-->
    <record model="ir.actions.act_window" id="bista_training.action_topics_master">
      <field name="name">Subject Topics</field>
      <field name="res_model">bista.topics</field>
      <field name="view_mode">tree,form</field>
    </record>
       </data>
</odoo>